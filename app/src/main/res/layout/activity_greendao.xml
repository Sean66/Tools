<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/id_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/id_et_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/id_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add one" />

        <Button
            android:id="@+id/id_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete one" />

        <Button
            android:id="@+id/id_btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update one" />

        <Button
            android:id="@+id/id_btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select" />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>